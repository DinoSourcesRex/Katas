<?xml version="1.0"?>
<appSettings>
  <add key="serilog:minimum-level" value="Debug" />
  <add key="serilog:using:RollingFile" value="Serilog.Sinks.RollingFile" />
  <add key="serilog:write-to:RollingFile.buffered" value="false" />
  <add key="serilog:write-to:RollingFile.pathFormat" value="C:\Logs\CustomerManagementController\Log-{Date}.txt" />
  <add key="serilog:write-to:RollingFile.retainedFileCountLimit" value="30" />
  <add key="serilog:write-to:RollingFile.outputTemplate" value="{Timestamp:yyyy-MM-dd HH:mm:ss.fff K} {Level} : {Message}{NewLine}{Exception}" />
</appSettings>